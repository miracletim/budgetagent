{
  "compilerOptions": {
    /* Output directories */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language and module settings */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Type checking */
    "strict": true,
    "skipLibCheck": true,

    /* Source maps */
    "sourceMap": true,

    /* Node environment types */
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
